        &lt;!&ndash; 加载mybatis的全局配置文件 &ndash;&gt;
        <property name="configLocation" value="classpath:database/mybatis-config.xml" />
    </bean>

    &lt;!&ndash; mapper扫描器 &ndash;&gt;
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        &lt;!&ndash; 扫描包路径，如果需要扫描多个包，中间使用半角逗号隔开 &ndash;&gt;
        <property name="basePackage" value="com.amazon.base.dao.mapper"></property>
